<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sign1" />

    <TextView
        android:id="@+id/add_ins_title"
        android:layout_width="@dimen/_74sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginTop="56dp"
        android:text="Inscribe"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_ins_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="116dp"
        android:text="Add"
        android:textColor="@color/buttonText"
        app:layout_constraintStart_toEndOf="@+id/add_ins_cancel"
        app:layout_constraintTop_toBottomOf="@+id/add_ins_msg" />

    <Button
        android:id="@+id/add_ins_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="116dp"
        android:text="Cancel"
        android:textColor="@color/buttonText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_ins_msg" />

    <TextView
        android:id="@+id/add_ins_max_char"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        android:text="Max characters: 140"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_ins_msg" />

    <TextView
        android:id="@+id/add_ins_location"
        android:layout_width="138dp"
        android:layout_height="69dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_ins_msg" />

    <EditText
        android:id="@+id/add_ins_msg"
        android:layout_width="320dp"
        android:layout_height="153dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:maxLength="140"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/add_ins_title" />

</androidx.constraintlayout.widget.ConstraintLayout>