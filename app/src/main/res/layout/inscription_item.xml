<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/GrayBg"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/GrayBg">

        <View
            android:id="@+id/item_box"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_280sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:background="@color/buttonText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/inscription_item_map"
            android:layout_width="@dimen/_252sdp"
            android:layout_height="@dimen/_98sdp"
            android:layout_marginTop="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="@+id/item_box"
            app:layout_constraintStart_toStartOf="@+id/item_box"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inscription_item_message"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_54sdp"
            android:text="Message"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="@+id/item_box"
            app:layout_constraintHorizontal_bias="0.452"
            app:layout_constraintStart_toStartOf="@+id/item_box"
            app:layout_constraintTop_toBottomOf="@+id/inscription_item_map" />

        <TextView
            android:id="@+id/inscription_item_date"
            android:layout_width="@dimen/_147sdp"
            android:layout_height="@dimen/_34sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="date"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintStart_toStartOf="@+id/item_box"
            app:layout_constraintTop_toBottomOf="@+id/inscription_item_map" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>